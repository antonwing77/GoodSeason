# GoodSeason Environment Variables
# Copy this file to .env and fill in the values.

# PostgreSQL connection string
# For Render: this is automatically set via render.yaml
# For local development: use a local Postgres or Supabase URL
DATABASE_URL=postgresql://user:password@localhost:5432/seasonscope

# Set to "true" if your database requires SSL (Render, Supabase, etc.)
DATABASE_SSL=false

# Port for the web server (Render sets this automatically)
PORT=3000

# Optional: UN Comtrade API key for live trade-flow queries
# Get a key at: https://comtradedeveloper.un.org/
# If not set, the comtrade connector uses curated trade data and logs a warning.
COMTRADE_API_KEY=
